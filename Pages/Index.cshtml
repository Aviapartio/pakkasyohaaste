@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    

}

<div>
    <h1 class="display-4">Pakkasyöhaaste</h1>
    <p>Lähetä kuvasi Aviapartion pakkasyöhaasteesta</p>
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Nimesi&nbsp;&nbsp;</label>
            <input type="text" asp-for="Nimi" />
        </div>
        <div class="form-group">
            <label>Päivämäärä (ed. ilta)</label>
            <input asp-for="Pvm" />
        </div>

        <div class="form-group">
            <label>Pakkasasteet&nbsp;&nbsp;</label>

            <select asp-for="Pakkasta">
                <option>-1</option>
                <option>-2</option>
                <option>-3</option>
                <option>-4</option>
                <option>-5</option>
                <option>-6</option>
                <option>-7</option>
                <option>-8</option>
                <option>-9</option>
                <option>-10</option>
                <option>-11</option>
                <option>-12</option>
                <option>-13</option>
                <option>-14</option>
                <option>-15</option>
                <option>-16</option>
                <option>-17</option>
                <option>-18</option>
                <option>-19</option>
                <option>-20</option>
                <option>-21</option>
                <option>-22</option>
                <option>-23</option>
                <option>-24</option>
                <option>-25</option>
                <option>-26</option>
                <option>-27</option>
                <option>-28</option>
                <option>-29</option>
                <option>Kotiin siitä!</option>
            </select>
        </div>
        <div class="form-group">
            <label>Kerro kokemuksestasi</label>
            @Html.TextAreaFor(model => model.Kuvaus, new { cols = 40, @rows = 3 })
        </div>
        <div class="form-group">
            <label>Kuva</label>
            <input type="file" asp-for="Upload" accept="image/x-png,image/gif,image/jpeg" />
            <span asp-validation-for="Upload" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Salasana&nbsp;&nbsp;</label>
            <input type="password" asp-for="Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Lähetä" class="btn btn-primary" />
        </div>
    </form>
    @if (ViewData["Success"] != null)
    {
        @if (ViewData["Success"].ToString() == "1") 
        {
        <div class="alert alert-success" > @ViewData["ErrorMessage"] </div>
        }
        
    else
        {
        <div class="alert alert-danger" > @ViewData["ErrorMessage"] </div>

        }
    }
</div>
